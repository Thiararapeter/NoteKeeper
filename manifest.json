{



    "name": "NoteKeeper",



    "short_name": "NoteKeeper",



    "description": "A modern note-taking web application",



    "start_url": "./",



    "display": "standalone",



    "background_color": "#f0f2f5",



    "theme_color": "#1a73e8",



    "orientation": "any",



    "icons": [



        {



            "src": "./icon/pencil 16px.png",



            "sizes": "16x16",



            "type": "image/png",



            "purpose": "any"



        },



        {



            "src": "./icon/pencil 24px.png",



            "sizes": "24x24",



            "type": "image/png",



            "purpose": "any"



        },



        {



            "src": "./icon/pencil 32px.png",



            "sizes": "32x32",



            "type": "image/png",



            "purpose": "any"



        },



        {



            "src": "./icon/pencil 64px.png",



            "sizes": "64x64",



            "type": "image/png",



            "purpose": "any"



        },



        {



            "src": "./icon/pencil 128px.png",



            "sizes": "128x128",



            "type": "image/png",



            "purpose": "any"



        },



        {



            "src": "./icon/pencil 256px.png",



            "sizes": "256x256",



            "type": "image/png",



            "purpose": "any maskable"



        },



        {



            "src": "./icon/pencil 512px.png",



            "sizes": "512x512",



            "type": "image/png",



            "purpose": "any"



        }



    ],



    "shortcuts": [



        {



            "name": "Add New Note",



            "short_name": "New Note",



            "description": "Create a new note",



            "url": "./?action=new",



            "icons": [{ "src": "./icon/pencil 256px.png", "sizes": "256x256" }]



        }



    ],



    "permissions": [



        "storage",



        "background"



    ],



    "background": {



        "service_worker": "service-worker.js"



    }



} 


